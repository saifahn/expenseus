{
  "compilerOptions": {
    "target": "es5",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "CommonJS",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "baseUrl": "./",
    "incremental": true
  },
  "include": [
    "./react-jest-setup.ts",
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    "tests/mocks/genericFileMock.js"
  ],
  "exclude": ["node_modules"]
}
